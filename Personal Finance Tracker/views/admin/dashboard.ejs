<section id="transactions" class="transactions-section">
  <h2>Transaction Management</h2>
  <div class="transaction-form">
    <h3>Enter Financial Data for the Day</h3>
    <form id="financialForm">
      <label for="income">Income</label>
      <input type="number" id="income" name="income" required placeholder="Enter income amount">
      
      <label for="expenses">Expenses</label>
      <input type="number" id="expenses" name="expenses" required placeholder="Enter total expenses">
      
      <label for="savings">Savings</label>
      <input type="number" id="savings" name="savings" required placeholder="Enter savings amount">
      
      <label for="other">Other Expenses</label>
      <input type="number" id="other" name="other" required placeholder="Enter other expenses">
      
      <button type="submit" class="cta-button">Generate Report</button>
    </form>
  </div>

  <h3>Monthly Breakdown</h3>
  <div class="chart-container">
    <canvas id="expensesChart"></canvas>
  </div>

  <h3>Remaining Balance (Line Chart)</h3>
  <div class="chart-container">
    <canvas id="balanceLineChart"></canvas>
  </div>

  <!-- Add a Download PDF button -->
  <div class="download-pdf">
    <button id="downloadPdf" class="cta-button">Download PDF</button>
  </div>
  <script src="/js/dashboard.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

</section>


